{
  "manifest_version": 3,
  "name": "Sora Explore - Unique Views + Metrics Dashboard",
  "version": "1.0.0",
  "description": "Overlays Sora video view stats, includes a metrics dashboard for deeper insights, and more!",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://sora.chatgpt.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://sora.chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": ["https://sora.chatgpt.com/*"],
  "permissions": ["storage", "unlimitedStorage"],
  "background": {
    "service_worker": "background.js"
  }
}
